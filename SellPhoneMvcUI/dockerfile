# Giai đoạn build
FROM mcr.microsoft.com/dotnet/sdk:9.0 AS build
WORKDIR /src

# Sao chép và kiểm tra tệp .csproj
COPY *.csproj ./
# Thêm lệnh để kiểm tra tệp được sao chép
RUN ls -la && dotnet restore -v detailed

# Sao chép mã nguồn và xuất bản
COPY . ./
RUN dotnet publish -c Release -o /app/publish
# Kiểm tra đầu ra publish (tùy chọn)
RUN ls -la /app/publish

# Giai đoạn runtime
FROM mcr.microsoft.com/dotnet/aspnet:9.0 AS runtime
WORKDIR /app

# Sao chép kết quả từ giai đoạn build
COPY --from=build /app/publish ./

# Cấu hình cổng
ENV ASPNETCORE_URLS=http://+:8080
EXPOSE 8080

# Chạy ứng dụng
ENTRYPOINT ["dotnet", "SellPhoneMvcUI.dll"]
