@model Product
@{
    ViewData["Title"] = "ProductDetail";
}

<div class="container mt-5">
    <div class="row">
        <!-- Product Images -->
        <div class="col-md-6 mb-4">
            <img src="@Model.ImageUrl" alt="Product" class="img-fluid rounded mb-3 product-image" id="mainImage">
        </div>

        <!-- Product Details -->
        <div class="col-md-6">
            <h2 class="mb-3 text-white">@Model.ProductName</h2>
            <p class="text-muted mb-4 ">@Model.Category.CategoryName</p>
            <p class="text-muted mb-4 ">@Model.Category.Description</p>
            <div class="mb-3">
                <span class="h4 me-2 text-white">@Model.Price.ToString("N0", new System.Globalization.CultureInfo("vi-VN")) đ</span>
            </div>
            <div class="mb-3">
                <i class="bi bi-star-fill text-warning"></i>
                <i class="bi bi-star-fill text-warning"></i>
                <i class="bi bi-star-fill text-warning"></i>
                <i class="bi bi-star-fill text-warning"></i>
                <i class="bi bi-star-half text-warning"></i>
                <span class="ms-2 text-white">4.5 (120 reviews)</span>
            </div>
            <p class="mb-4 text-white">
                @Model.Description
            </p>
            <a href="@Url.Action("AddItem", "Cart", new {productId=Model.ProductId, redirect=1})"
               type="button" class="btn btn-cam btn-lg mb-3 me-2">
                <i class="bi bi-cart-plus"></i> Add to Cart
            </a>
        </div>
    </div>
    @section Scripts {
        <script>
            function changeImage(src) {
                document.getElementById('mainImage').src = src;
            }
        </script>
    }
</div>


