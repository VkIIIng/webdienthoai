@page
@model LoginWithRecoveryCodeModel

@{
    ViewData["Title"] = "Recovery code verification";
}

<div class="min-h-screen bg-base-200 flex items-center justify-center">
    <div class="card w-full max-w-md bg-base-100 shadow-xl">
        <div class="card-body">
            <h1 class="text-3xl font-bold text-center text-primary">@ViewData["Title"]</h1>
            <hr class="border-base-300" />
            <p class="text-base-content">
                You have requested to log in with a recovery code. This login will not be remembered until you provide
                an authenticator app code at log in or disable 2FA and log in again.
            </p>
            <form method="post" class="space-y-4">
                <div asp-validation-summary="ModelOnly" class="alert alert-error" role="alert"></div>
                <div class="form-control">
                    <label asp-for="Input.RecoveryCode" class="label">
                        <span class="label-text">Recovery Code</span>
                    </label>
                    <input asp-for="Input.RecoveryCode" class="input input-bordered w-full" autocomplete="off" placeholder="Recovery Code" />
                    <span asp-validation-for="Input.RecoveryCode" class="text-error text-sm mt-1"></span>
                </div>
                <button type="submit" class="btn btn-primary w-full">Log in</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}