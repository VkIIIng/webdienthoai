@page
@model ResendEmailConfirmationModel

@{
    ViewData["Title"] = "Resend email confirmation";
}

<div class="min-vh-100 d-flex align-items-center justify-content-center bg-transparent py-5">
    <div class="card shadow-lg" style="max-width: 24rem; width: 100%;">
        <div class="card-body">
            <h1 class="display-6 fw-bold text-center text-primary">@ViewData["Title"]</h1>
            <h2 class="h5 fw-semibold mb-3">Enter your email.</h2>
            <hr class="border-secondary" />
            <form method="post" class="mt-4">
                @if (!ModelState.IsValid)
                {
                    <div asp-validation-summary="All" class="text-white" role="alert"></div>
                }
                <div class="mb-3">
                    <label asp-for="Input.Email" class="form-label">
                        Email
                    </label>
                    <input asp-for="Input.Email" class="form-control" aria-required="true" placeholder="name@example.com" />
                    <span asp-validation-for="Input.Email" class="text-danger small mt-1 d-block"></span>
                </div>
                <button type="submit" class="btn btn-primary w-100">Resend</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}