@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="min-vh-100 d-flex align-items-center justify-content-center bg-transparent py-5">
    <div class="card shadow-lg" style="max-width: 24rem; width: 100%;">
        <div class="card-body">
            <h1 class="display-6 fw-bold text-center text-white">@ViewData["Title"]</h1>
            <section>
                <form id="account" method="post" class="mt-4">
                    <h2 class="h5 fw-semibold mb-3">Use a local account to log in.</h2>
                    <hr class="border-secondary" />
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                    <div class="mb-3">
                        <label asp-for="Input.Email" class="form-label">
                            Email
                        </label>
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                        <span asp-validation-for="Input.Email" class="text-danger small mt-1 d-block"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Input.Password" class="form-label">
                            Password
                        </label>
                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                        <span asp-validation-for="Input.Password" class="text-danger small mt-1 d-block"></span>
                    </div>
                    <div class="mb-3 form-check">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        <label asp-for="Input.RememberMe" class="form-check-label">
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                    <div>
                        <button id="login-submit" type="submit" class="btn btn-primary w-100">Log in</button>
                    </div>
                    <div class="mt-3">
                        <p>
                            <a id="forgot-password" asp-page="./ForgotPassword" class="link-primary text-decoration-none  text-white">Forgot your password?</a>
                        </p>
                        <p>
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="link-primary text-decoration-none text-white">Register as a new user</a>
                        </p>
                        <p>
                            <a id="resend-confirmation" asp-page="./ResendEmailConfirmation" class="link-primary text-decoration-none text-white">Resend email confirmation</a>
                        </p>
                    </div>
                </form>
            </section>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}