@page
@model SetPasswordModel
@{
    ViewData["Title"] = "Set password";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<h3 class="text-2xl font-bold mb-4">Set your password</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<p class="text-info">
    You do not have a local username/password for this site. Add a local
    account so you can log in without an external login.
</p>
<div class="max-w-md">
    <form id="set-password-form" method="post" class="space-y-4">
        <div asp-validation-summary="ModelOnly" class="text-error" role="alert"></div>
        <div class="form-control">
            <label asp-for="Input.NewPassword" class="label">
                <span class="label-text">New Password</span>
            </label>
            <input asp-for="Input.NewPassword" class="input input-bordered w-full" autocomplete="new-password" placeholder="Please enter your new password." />
            <span asp-validation-for="Input.NewPassword" class="text-error text-sm mt-1"></span>
        </div>
        <div class="form-control">
            <label asp-for="Input.ConfirmPassword" class="label">
                <span class="label-text">Confirm Password</span>
            </label>
            <input asp-for="Input.ConfirmPassword" class="input input-bordered w-full" autocomplete="new-password" placeholder="Please confirm your new password." />
            <span asp-validation-for="Input.ConfirmPassword" class="text-error text-sm mt-1"></span>
        </div>
        <button type="submit" class="btn btn-primary w-full">Set password</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}