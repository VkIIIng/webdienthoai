@page
@model ResetPasswordConfirmationModel

@{
    ViewData["Title"] = "Reset password confirmation";
}

<div class="min-vh-100 d-flex align-items-center justify-content-center bg-light">
    <div class="card shadow-lg" style="max-width: 24rem; width: 100%;">
        <div class="card-body text-center">
            <h1 class="display-6 fw-bold text-primary">@ViewData["Title"]</h1>
            <p class="text-muted">
                Your password has been reset. Please <a asp-page="./Login" class="link-primary text-decoration-none">click here to log in</a>.
            </p>
        </div>
    </div>
</div>