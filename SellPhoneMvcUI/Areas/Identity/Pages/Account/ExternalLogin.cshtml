@page
@model ExternalLoginModel

@{
    ViewData["Title"] = "Register";
}

<div class="min-h-screen flex items-center justify-center bg-transparent py-5">
    <div class="card w-full max-w-md bg-base-100 shadow-xl">
        <div class="card-body">
            <h1 class="text-3xl font-bold text-center text-primary">@ViewData["Title"]</h1>
            <h2 id="external-login-title" class="text-xl font-semibold text-base-content">Associate your @Model.ProviderDisplayName account.</h2>
            <hr class="border-base-300" />
            <p id="external-login-description" class="text-info">
                You've successfully authenticated with <strong>@Model.ProviderDisplayName</strong>.
                Please enter an email address for this site below and click the Register button to finish
                logging in.
            </p>
            <form asp-page-handler="Confirmation" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="space-y-4">
                <div asp-validation-summary="ModelOnly" class="alert alert-error" role="alert"></div>
                <div class="form-control">
                    <label asp-for="Input.Email" class="label">
                        <span class="label-text">Email</span>
                    </label>
                    <input asp-for="Input.Email" class="input input-bordered w-full" autocomplete="email" placeholder="Please enter your email." />
                    <span asp-validation-for="Input.Email" class="text-error text-sm mt-1"></span>
                </div>
                <button type="submit" class="btn btn-primary w-full">Register</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}