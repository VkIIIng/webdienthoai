@page
@model LogoutModel

@{
    ViewData["Title"] = "Log out";
}

<div class="min-vh-100 d-flex align-items-center justify-content-center bg-transparent py-5">
    <div class="card shadow-lg" style="max-width: 24rem; width: 100%;">
        <div class="card-body text-center">
            <h1 class="display-6 fw-bold text-primary">@ViewData["Title"]</h1>
            @{
                if (User.Identity?.IsAuthenticated ?? false)
                {
                    <form class="d-flex justify-content-center" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                        <button type="submit" class="btn btn-primary">Click here to Logout</button>
                    </form>
                }
                else
                {
                    <p class="text-muted">You have successfully logged out of the application.</p>
                }
            }
        </div>
    </div>
</div>